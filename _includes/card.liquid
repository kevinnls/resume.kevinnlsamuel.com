{%assign x = experience[exp_code][lang]%}
<article class="p-2">
	<header class="col-span-2">
		<h3 class="font-bold">{{x.org}}</h3>
	<section class="flex justify-between items-center">
		<p class="text-md">{{x.title}}<br />
		{{x.location}}
		</p>
		<p></p>
		{%if x.end%}
			<p class="text-md">{{x.start | fmtDate: lang}}&ndash;{{x.end | fmtDate: lang}}</p>
		{%else%}
			<p class="text-md">
			{{-messages.since[lang]}} {{x.start | fmtDate: lang-}}
			</p>
		{%endif%}
	</section>
	</header>
	<section>
		<ul class="list-disc list-inside indent-2">
			{%for item in x.list%}
				<li>{{-item-}}</li>
			{%endfor%}
		</ul>
	</section>

</article>
